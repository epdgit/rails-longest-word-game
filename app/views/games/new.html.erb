<div>
  <ul>
    <% @letters.each do |letter| %>
      <li><strong><%= letter %></strong></li>
    <% end %>
  </ul>
</div>
  <form action="/score" method="POST" class="form-inline form-eu">
    <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
    <label for="letter">What is the longest word you can find?</label><br>
      <div class="input-group">
        <input type="text" id="letter" name="user_choice" class="form-control">
        <span class="input-group-btn">
        <input type="submit" value="Play" class="btn btn-primary">
      </div>
  </form>